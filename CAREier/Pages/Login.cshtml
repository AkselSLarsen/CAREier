@page "{id:int}"
@model CAREier.Pages.LoginModel
@{
}

<h1>@Model.UserType Login</h1>

<div>


    <form method="post">
        <div class="form-group">
            <label>Username</label>
            <input asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <p>@Model.Error</p>
        <p>
            <input type="submit" value="Login" />
        </p>
        <a asp-page="Register" asp-route-id="@Model.UserTypeToInt()">Not registered? Click here</a>
    </form>
</div>