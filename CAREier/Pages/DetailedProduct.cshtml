@page "{id:int}"
@model CAREier.Pages.DetailedProductModel
@{
}

<h1>Product details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="@Model.Product.Name" class="control-label"></label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Price" class="control-label"></label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Weight" class="control-label"></label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Dimensions" class="control-label"></label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Tags" class="control-label"></label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Picture" class="control-label"></label>
        </div>
