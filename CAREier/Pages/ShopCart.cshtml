@page "{id?}"
@model CAREier.Pages.ShopCardModel
@{
    ViewData["Title"] = "ShoppingCart";

}

<div class="flex-container">

    <div class="ItemList">
        <h2>List of items</h2>
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Taken</th>
                    <th>Weight</th>
                    <th class="text-right">Price</th>
                </tr>
                <!-- ="multipart/form-data"-->
                <form method="post" class="form-horizontal">
                    <tr>
                        @for (int i = 0; i < @Model.Products.Count; i++)
                        {
                            <td>
                                <div class="form-group">
                                    <label for="i" class="col-sm-2 control-label">i</label>
                                </div>
                            </td>
                            <td>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn btn-primary" asp-route-id="@Model.Products[i].id">Buy</button>

                                </div>
                            </td>
                         }
                        </tr>
                    </form>
                    </thead>
                </table>
    </div>
    <div class="shop-page-container">
        <div class="headfield">
            <form method="post">
                <h2>
                    <input type="text" />
                    <input type="submit" value="Search" />
                </h2>
            </form>
        </div>
        <div class="bodyfield">
            <div class="Mainfield">
                <p>some more stuff</p>
            </div>
            <div class="LeftSidfield">
                <div class="rounded_box">

                    <table>
                        <thead>
                            <tr>
                                <th>Buyer</th>
                                <th>Taken</th>
                                <th>Image</th>
                                <th class="text-right">Price</th>
                            </tr>
                            @if (Model.CurrentBuyer.OrderActive)
                            {
                                @foreach (var Ord in @Model.CurrentBuyer.Orders)
                                {
                        <tr>
                            <td> @Ord.OrderID</td>
                            <td> @Ord.TotalPrice</td>
                            <td> @Ord.TotalWeight</td>
                            <td> @Ord.CreationDate</td>
                            <td> @Ord.CountProds()</td>
                        </tr>

                                }
                            }
                        </thead>
                    </table>
                </div>
                <div class="text-center">
                    <a asp-page="/Books/AllBooks" class="btn btn-primary">Continue shopping</a>
                    <a asp-page="/Orders/CheckOut" class="btn btn-primary">Check_Out</a>
                </div>
            </div>
        </div>
    </div>
</div>


